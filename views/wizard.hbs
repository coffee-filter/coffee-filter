<form action="/wizard" method="post"></form>
  <fieldset class = "brewing-method"></div>
    <legend>How do you brew your coffee?</legend>
    
    <div>
      <img src="images/mokkapot.svg" alt="mokka icon">
      <label for="mokka">Mokka Pot</label>
      <input type="checkbox" id="mokka" name="mokka-pot" value="mokka-pot">
    </div>
    
    <div>
      <img src="images/v60.svg" alt="v60 icon">
      <label for="v60">V60</label>
      <input type="checkbox" id="v60" name="v60" value="v60">
    </div>
    <div>
      <img src="images/frenchpress.svg" alt="french-press icon">
      <label for="french-press">Mokka Pot</label>
      <input type="checkbox" id="french-press" name="french-press" value="french-press">
    </div>

    <div>
      <img src="images/aeropress.svg" alt="aero-press icon">
      <label for="aero-press">Aero Press</label>
      <input type="checkbox" id="aero-press" name="aero-press" value="aero-press">
    </div>

    <div>
      <img src="images/chemex.svg" alt="chemex icon">
      <label for="chemex">Chemex</label>
      <input type="checkbox" id="chemex" name="chemex" value="chemex">
    </div>
    <div>
      <img src="images/espresso.svg" alt="espresso-machine icon">
      <label for="espresso-machine">Espresso Machine</label>
      <input type="checkbox" id="espresso-machine" name="espresso-machine" value="espresso-machine">
    </div>  
    
    <button>Next</button>
  </fieldset>

  <fieldset class = "acidity-strength"></div>
    <legend>Please choose your preferred acidity and strength levels</legend>
    
    <div>
      <label for="acidity">Acidity</label>
      <input type="radio" id="acidity" name="acidity" value="1">
      <input type="radio" id="acidity" name="acidity" value="2">
      <input type="radio" id="acidity" name="acidity" value="3">
      <input type="radio" id="acidity" name="acidity" value="4">
      <input type="radio" id="acidity" name="acidity" value="5">

      <label for="strength">Strength</label>
      <input type="radio" id="strength" name="strength" value="1">
      <input type="radio" id="strength" name="strength" value="2">
      <input type="radio" id="strength" name="strength" value="3">
      <input type="radio" id="strength" name="strength" value="4">
      <input type="radio" id="strength" name="strength" value="5">
    </div>

    <button>Next</button>
  </fieldset>

  <fieldset class = "taste-characteristics"></div>
    <legend>Please choose your preferred taste characteristics</legend>
    
    <div>
      <label for="nutty">Nutty</label>
      <input type="checkbox" id="nutty" name="nutty" value="nutty">

      <label for="sweet">Sweet</label>
      <input type="checkbox" id="sweet" name="sweet" value="sweet">

      <label for="herbal">Herbal</label>
      <input type="checkbox" id="herbal" name="herbal" value="herbal">

      <label for="chocolate">Chocolate</label>
      <input type="checkbox" id="chocolate" name="chocolate" value="chocolate">

      <label for="floral">Floral</label>
      <input type="checkbox" id="floral" name="floral" value="floral">
    </div>
    
    <button type="submit">Filter</button>
  </fieldset>

</form>
