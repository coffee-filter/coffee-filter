<div class="topbar">
  <a href="/"><img src="../images/coffeefilter2.png" alt="coffee filter logo"></a>
  <a href="/"><img src="../images/equis.svg" alt="close wizard"></a>
</div>
<form action="/wizard/3" method="POST">

  <div class = "taste-characteristics">
    <legend>Please choose your preferred taste characteristics</legend>
    
    <div class = "taste-wrapper">
      <div>
      <label for="nutty">Nutty</label>
      <input type="checkbox" id="nutty" name="nutty" value="nutty">
      </div>

      <div>
      <label for="sweet">Sweet</label>
      <input type="checkbox" id="sweet" name="sweet" value="sweet">
      </div>

      <div>
      <label for="herbal">Herbal</label>
      <input type="checkbox" id="herbal" name="herbal" value="herbal">
      </div>

      <div>
      <label for="chocolate">Chocolate</label>
      <input type="checkbox" id="chocolate" name="chocolate" value="chocolate">
      </div>

      <div>
      <label for="floral">Floral</label>
      <input type="checkbox" id="floral" name="floral" value="floral">
      </div>
    </div>
    
    <button type="submit">Filter</button>
  </div>
</form>