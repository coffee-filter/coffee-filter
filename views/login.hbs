<form action="/login" method="POST">

  <label for="username">Username</label>
  <input type="text" name="username"/>

  <label for="password">Password</label>
  <input type="password" name="password"/>

  {{#if message}}
    <div>{{message}}</div>
  {{/if}}

  <button type="submit">Log in</button>
</form>