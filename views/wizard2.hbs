<form action="/wizard/2" method="POST">
<div class = "acidity-strength">
    <legend>Please choose your preferred acidity and strength levels</legend>

    <div class="as-wrapper">
      <label for="acidity">Acidity</label>
      <div><input type="radio" id="acidity" name="acidity" value="1" required><span>1</span></div>
      <div><input type="radio" id="acidity" name="acidity" value="2"><span>2</span></div>
      <div><input type="radio" id="acidity" name="acidity" value="3"><span>3</span></div>
      <div><input type="radio" id="acidity" name="acidity" value="4"><span>4</span></div>
      <div><input type="radio" id="acidity" name="acidity" value="5"><span>5</span></div>
    </div>

    <div class="as-wrapper">
      <label for="strength">Strength</label>
      <div><input type="radio" id="strength" name="strength" value="1" required><span>1</span></div>
      <div><input type="radio" id="strength" name="strength" value="2"><span>2</span></div>
      <div><input type="radio" id="strength" name="strength" value="3"><span>3</span></div>
      <div><input type="radio" id="strength" name="strength" value="4"><span>4</span></div>
      <div><input type="radio" id="strength" name="strength" value="5"><span>5</span></div>
    </div>
    <input type="text" name="brewingmethod" value="{{brewingmethod}}">
    <button type="submit">Next</button>
  </div>

</form>